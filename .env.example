# Environnement (development, production)
APP_ENV=development

# Configuration de la base de données
DB_HOST=host_name
DB_NAME=db_name
DB_USER=user_name
DB_PASS=db_password
DB_CHARSET=utf8mb4

# Configuration de l'application
APP_NAME="ReadSphere"
APP_URL=URL
APP_DEBUG=true

# Configuration de la session
SESSION_NAME=bookreview_session
SESSION_LIFETIME=1440 # 24 minutes

# Configuration du téléchargement des fichiers
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_TYPES=jpg,jpeg,png,gif

# Configuration des emails
MAIL_HOST=smtp.gmail.com
MAIL_USERNAME=example@gmail.com
MAIL_PASSWORD=your_password
MAIL_PORT=587

# Configuration du mode maintenance
MAINTENANCE_MODE=false

# Configuration des images
IMAGE_MAX_SIZE=5242880  # 5MB
IMAGE_ALLOWED_TYPES=image/jpeg,image/png,image/gif
IMAGE_QUALITY=85